<Window x:Class="AdjustableVoltageSource.MeasureScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdjustableVoltageSource"
        mc:Ignorable="d"
        Title="Measure" Height="auto" Width="auto" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label>Change BoardNumber:</Label>
                <TextBox Height="15" Width="40"></TextBox>
                <Label Foreground="#FF696464" FontSize="10">(Format: 0x01)</Label>
                <Separator Width="15" Background="Transparent"/>

            </StackPanel>
            <Button HorizontalAlignment="Center" Name="ApplyBoardNumber">Apply Changes</Button>
            <Separator Width="15" Background="Transparent"/>
            <Button HorizontalAlignment="Center" Name="CancelBoardNumber">Back</Button>
            <Separator Height="15" Background="Transparent"/>
        </StackPanel>
    </Grid>
</Window>
